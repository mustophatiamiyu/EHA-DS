{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/tokens/*": ["./src/theme/design-tokens/*"],
      "@/components/*": ["./src/components/*"]
    },
    "types": ["node"],
    "allowSyntheticDefaultImports": true, // ✅ Added for smoother default imports
    "esModuleInterop": true // ✅ Added for compatibility with CommonJS modules
  },
  "include": ["src", "stories", ".storybook"]
}
